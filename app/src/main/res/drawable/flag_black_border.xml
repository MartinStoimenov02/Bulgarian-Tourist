<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black Border -->
    <item android:width="50dp" android:height="40dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@android:color/black" />
        </shape>
    </item>
    <!-- Flag Image -->
    <item
        android:drawable="@drawable/bulgarian_flag"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp"/>
</layer-list>